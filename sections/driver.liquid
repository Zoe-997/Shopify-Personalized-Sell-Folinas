
{%- style -%}
    .section + .section {
        margin: 0
    }

    .section-{{ section.id }}-padding {
      margin-top: calc({{ section.settings.margin_top }}px * 0.75);
      margin-bottom: calc({{ section.settings.margin_bottom }}px  * 0.75);
      border-style: {{ section.settings.style }};
      border-color: rgb(var(--color-foreground)); 
      border-width: {{ section.settings.height }}px 0 0 0;
    }
  
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        margin-top: {{ section.settings.margin_top }}px;
        margin-bottom: {{ section.settings.margin_bottom }}px;
      }
    }
{%- endstyle -%}

  <div class="color-{{ section.settings.color_scheme }} gradient{% if section.settings.layout == 'grid' %} page-width{% endif %}">
    <div class="section-{{ section.id }}-padding">
      {{ section.settings.custom_liquid }}
    </div>
  </div>
  
  {% schema %}
  {
    "name": "t:sections.driver.name",
    "tag": "section",
    "class": "section",
    "settings": [
        {
            "type": "select",
            "id": "layout",
            "options": [
                {
                "value": "full_bleed",
                "label": "t:sections.slideshow.settings.layout.options__1.label"
                },
                {
                "value": "grid",
                "label": "t:sections.slideshow.settings.layout.options__2.label"
                }
            ],
            "default": "full_bleed",
            "label": "t:sections.slideshow.settings.layout.label"
        },
        {
            "type": "range",
            "id": "height",
            "min": 1,
            "max": 5,
            "step": 1,
            "unit": "px",
            "label": "t:sections.driver.height",
            "default": 1
        },
        {
            "type": "select",
            "id": "style",
            "label": "t:sections.driver.style.label",
            "options": [
                {
                    "value": "dotted",
                    "label": "t:sections.driver.style.options.item_1"
                },
                {
                    "value": "dashed",
                    "label": "t:sections.driver.style.options.item_2"
                },
                {
                    "value": "solid",
                    "label": "t:sections.driver.style.options.item_3"
                },
                {
                    "value": "double",
                    "label": "t:sections.driver.style.options.item_4"
                }
            ],
            "default": "solid"
        },
        {
            "type": "color_scheme",
            "id": "color_scheme",
            "label": "t:sections.all.colors.label",
            "default": "scheme-1"
        },
        {
            "type": "header",
            "content": "t:sections.all.margin.section_margin_heading"
        },
        {
            "type": "range",
            "id": "margin_top",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "t:sections.all.margin.margin_top",
            "default": 40
        },
        {
            "type": "range",
            "id": "margin_bottom",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "t:sections.all.margin.margin_bottom",
            "default": 52
        }
    ],
    "presets": [
        {
            "name": "t:sections.driver.presets.name"
        }
    ]
  }
  {% endschema %}
  